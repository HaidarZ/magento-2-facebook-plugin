<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <fbplugin>
            <general>
                <enabled>1</enabled>
            </general>
            <fbwidget>
                <enabled>1</enabled>
                <tabs>timeline</tabs>
                <width>340</width>
                <height>500</height>
                <hide_cover>false</hide_cover>
                <show_facepile>true</show_facepile>
                <hide_cta>false</hide_cta>
                <small_header>false</small_header>
                <adapt_container_width>true</adapt_container_width>
            </fbwidget>
            <fbcomments>
                <enabled>0</enabled>
                <title>Facebook comments</title>
                <width>550</width>
                <num_posts>5</num_posts>
            </fbcomments>
        </fbplugin>
    </default>
</config>